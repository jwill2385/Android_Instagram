<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:layout_margin="8dp">

    <ImageView
        android:id="@+id/ivComment"
        android:layout_width="22dp"
        android:layout_height="22dp"
        android:layout_alignEnd="@+id/tvUsername"
        android:layout_alignTop="@+id/ivLike"
        app:srcCompat="@drawable/ufi_comment" />

    <ImageView
        android:id="@+id/ivProfile"
        android:layout_width="37dp"
        android:layout_height="36dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        app:srcCompat="@drawable/instagram_user_outline_24" />

    <TextView
        android:id="@+id/tvUsername"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="5dp"
        android:layout_toEndOf="@+id/ivProfile"
        android:text="Username" />

    <ImageView
        android:id="@+id/ivPostPicture"
        android:layout_width="220dp"
        android:layout_height="250dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="59dp"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        app:srcCompat="?android:attr/colorForeground" />

    <TextView
        android:id="@+id/tvCaption"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ivPostPicture"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:text="Caption" />

    <ImageView
        android:id="@+id/ivLike"
        android:layout_width="22dp"
        android:layout_height="22dp"
        android:layout_below="@+id/tvCaption"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="74dp"
        android:layout_toStartOf="@+id/tvUsername"
        app:srcCompat="@drawable/ufi_heart" />

    <ImageView
        android:id="@+id/ivShare"
        android:layout_width="22dp"
        android:layout_height="22dp"
        android:layout_alignEnd="@+id/ivPostPicture"
        android:layout_alignTop="@+id/ivLike"
        app:srcCompat="@drawable/ufi_new_direct" />

    <ImageView
        android:id="@+id/ivSave"
        android:layout_width="22dp"
        android:layout_height="22dp"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/ivLike"
        android:layout_marginEnd="31dp"
        app:srcCompat="@drawable/ufi_save" />

    <TextView
        android:id="@+id/tvTimeStamp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/ivShare"
        android:text="Time stamp" />
</RelativeLayout>